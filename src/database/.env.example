# DataForge Database Configuration
# Copy this file to .env and fill in your values

# Google Cloud SQL Connection
# Option 1: Direct connection (for Cloud SQL Proxy or public IP)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=dataforge
DB_USER=postgres
DB_PASSWORD=your_password_here

# Option 2: Unix socket (for Cloud Run/App Engine)
# DB_SOCKET_PATH=/cloudsql/your-project:us-central1:your-instance

# Connection Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10

# SSL Configuration (required for Cloud SQL)
DB_SSL=true

# Environment
NODE_ENV=development
